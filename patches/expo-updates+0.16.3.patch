+    if (event.type === Updates.UpdateEventType.NO_UPDATE_AVAILABLE) {
+        return {
+            currentlyRunning,
+            embedded,
+        };
+    }
+    else if (event.type === Updates.UpdateEventType.UPDATE_AVAILABLE) {
+        return {
+            currentlyRunning,
+            updateAvailable: event.manifest,
+            embedded,
+        };
+    }
+    else {
+        // event type === ERROR
+        return {
+            currentlyRunning,
+            error: event.message || '',
+            embedded,
+        };
+    }
+};
